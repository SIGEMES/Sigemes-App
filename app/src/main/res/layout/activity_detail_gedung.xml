<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/softblue"
    tools:context=".presentation.home.search.detail.DetailGedungActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_photo_cityhall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/photo"
                tools:listitem="@layout/item_photo_slider" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="start|top"
                android:layout_margin="16dp"
                android:clickable="true"
                android:contentDescription="@string/icon"
                android:focusable="true"
                android:src="@drawable/arrow_back"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_general_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/building_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/gedung_adam_malik"
                    style="@style/TextBoldH4"/>

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@color/black"
                    android:src="@drawable/location"
                    app:layout_constraintTop_toBottomOf="@id/building_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Padangsidimpuan, Sumatera Utara"
                    style="@style/TextBoldH6"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/location_icon"
                    app:layout_constraintTop_toTopOf="@id/location_icon"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/location_icon"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:backgroundTint="@color/softblue"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="360dp"
                    app:layout_constraintBottom_toTopOf="@id/text_peta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/mess_menu"
                            android:src="@drawable/maps"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/babyblue" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/text_peta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Peta"
                    android:textAlignment="center"
                    android:textColor="@color/babyblue"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="@id/maps"
                    app:layout_constraintStart_toStartOf="@id/maps"
                    app:layout_constraintTop_toBottomOf="@id/maps" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:strokeColor="@color/babyblue"
                    android:backgroundTint="@color/softblue"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="24dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/location_icon"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="2dp">

                        <ImageView
                            android:id="@+id/star"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star"
                            app:tint="@color/yellow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/text_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/TextBoldH45"
                            android:textColor="@color/darkBlue"
                            android:text="@string/rating"
                            app:layout_constraintBottom_toBottomOf="@id/star"
                            app:layout_constraintStart_toEndOf="@id/star"
                            app:layout_constraintTop_toTopOf="@id/star" />

                        <TextView
                            android:id="@+id/total_ulasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@id/text_review_count"
                            app:layout_constraintBottom_toBottomOf="@id/text_review_count"
                            app:layout_constraintStart_toEndOf="@id/text_review_count"
                            android:text="@string/ulasan_count"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/text_facilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasilitas: "
                    android:textColor="@color/facility"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    android:layout_marginTop="16dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/facilities"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/text_facilities"
                    app:layout_constraintStart_toEndOf="@id/text_facilities"
                    app:layout_constraintTop_toTopOf="@id/text_facilities"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_facility" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/onGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/review"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_general_info"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/about_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tentang_gedung"
                    style="@style/TextBoldH5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tentang_gedung_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_text_title"
                    android:text="@string/lorem"
                    android:maxLines="2"
                    android:layout_marginTop="8dp"
                    style="@style/TextH6"/>

                <TextView
                    style="@style/TextBoldH6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selengkapnya"
                    android:textColor="@color/babyblue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_ulasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_about"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ulasan_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ulasan_dari_tamu"
                    style="@style/TextBoldH5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TextBoldH6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat semua"
                    android:textColor="@color/babyblue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/star"
                    app:tint="@color/yellow"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ulasan_text_title"/>

                <TextView
                    android:id="@+id/text_review_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    style="@style/TextBoldH45"
                    android:textColor="@color/babyblue"
                    android:text="@string/rating"
                    app:layout_constraintBottom_toBottomOf="@id/star2"
                    app:layout_constraintStart_toEndOf="@id/star2"
                    app:layout_constraintTop_toTopOf="@id/star2" />

                <TextView
                    android:id="@+id/total_ulasan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/text_review_count2"
                    app:layout_constraintBottom_toBottomOf="@id/text_review_count2"
                    app:layout_constraintStart_toEndOf="@id/text_review_count2"
                    android:text="@string/ulasan_count"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_select_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_ulasan"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:background="?attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/event_selection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silahkan Pilih Kategori Acara"
                    style="@style/TextBoldH5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/event_option_1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_selection_title"
                    app:strokeColor="@color/babyblue"
                    app:strokeWidth="1.5dp"
                    tools:ignore="TouchTargetSizeCheck">

                    <CheckBox
                        android:id="@+id/check_option_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingHorizontal="10dp"
                        android:text="Option 1" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/event_option_2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_option_1"
                    app:strokeColor="@color/onGray"
                    app:strokeWidth="1.5dp"
                    tools:ignore="TouchTargetSizeCheck">

                    <CheckBox
                        android:id="@+id/check_option_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingHorizontal="10dp"
                        android:text="Option 2" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/event_option_3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingVertical="10dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_option_2"
                    app:strokeColor="@color/onGray"
                    app:strokeWidth="1.5dp"
                    tools:ignore="TouchTargetSizeCheck">

                    <CheckBox
                        android:id="@+id/check_option_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingHorizontal="10dp"
                        android:text="Option 3" />

                </com.google.android.material.card.MaterialCardView>


                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/onGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/event_option_3"/>

                <TextView
                    android:id="@+id/cityhall_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Terkait Penyewaan Gedung Adam Malik"
                    style="@style/TextBoldH5"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider2"/>

                <ImageView
                    android:id="@+id/warning_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cityhall_info_title"
                    android:layout_marginTop="10dp"
                    app:tint="@color/orange"
                    android:src="@drawable/baseline_warning_amber_24"/>

                <TextView
                    android:id="@+id/warning_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mohon_diperhatikan"
                    app:layout_constraintTop_toTopOf="@id/warning_icon"
                    app:layout_constraintStart_toEndOf="@id/warning_icon"
                    app:layout_constraintBottom_toBottomOf="@id/warning_icon"
                    style="@style/TextBoldH6"
                    android:textColor="@color/orange"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/kebijakan_city_hall_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/orange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/warning_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/kebijakan_cityhall"
                    style="@style/TextH6"/>

                <TextView
                    android:id="@+id/cityhall_payment_text"
                    style="@style/TextH6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/cityhall_payment_info_text"
                    android:textColor="@color/orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/kebijakan_city_hall_text" />

                <TextView
                    android:id="@+id/reschedule_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cityhall_payment_text"
                    android:text="@string/reschedule_text_cityhall"
                    style="@style/TextH6"/>

                <TextView
                    android:id="@+id/refund_text"
                    style="@style/TextH6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/refund_text_cityhall"
                    android:textColor="@color/orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/reschedule_text" />

                <View
                    android:id="@+id/divide2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/onGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/refund_text"/>

                <TextView
                    android:id="@+id/fasilitas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fasilitas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divide2"
                    style="@style/TextBoldH5"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/luas_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fasilitas_title"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/size"/>

                <TextView
                    android:id="@+id/luas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luas: "
                    app:layout_constraintTop_toTopOf="@id/luas_icon"
                    app:layout_constraintStart_toEndOf="@id/luas_icon"
                    app:layout_constraintBottom_toBottomOf="@id/luas_icon"
                    style="@style/TextH6"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/luas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/luas_title"
                    app:layout_constraintTop_toTopOf="@id/luas_title"
                    app:layout_constraintBottom_toBottomOf="@+id/luas_title"
                    android:layout_marginStart="5dp"
                    android:text="1000 m"
                    style="@style/TextH6"/>

                <ImageView
                    android:id="@+id/capacity_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/luas"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/group"/>

                <TextView
                    android:id="@+id/capacity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas Gedung: "
                    app:layout_constraintTop_toTopOf="@id/capacity_icon"
                    app:layout_constraintStart_toEndOf="@id/capacity_icon"
                    app:layout_constraintBottom_toBottomOf="@id/capacity_icon"
                    style="@style/TextH6"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/capacity_title"
                    app:layout_constraintTop_toTopOf="@id/capacity_title"
                    app:layout_constraintBottom_toBottomOf="@+id/capacity_title"
                    android:layout_marginStart="5dp"
                    android:text="1000 orang"
                    style="@style/TextH6"/>

                <TextView
                    android:id="@+id/fasilias_acara_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/capacity"
                    android:text="Fasilitas acara"
                    style="@style/TextH6"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/fasilitas_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fasilias_acara_title"
                    android:text="@string/room_facilities"
                    style="@style/TextH6"
                    android:layout_marginTop="5dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_rincian_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_select_event_type"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:background="?attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            android:layout_marginBottom="16dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/rincian_harga_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rincian_title"
                    style="@style/TextBoldH5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/rincian_pemesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rincian"
                    style="@style/TextH6"
                    android:layout_marginTop="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rincian_harga_title"/>

                <TextView
                    android:id="@+id/event_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kategori_acara"
                    style="@style/TextH6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rincian_pemesanan"/>

                <TextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/umum"
                    style="@style/TextH6"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/event_type_title"
                    app:layout_constraintTop_toTopOf="@id/event_type_title"
                    app:layout_constraintBottom_toBottomOf="@id/event_type_title"/>

                <TextView
                    android:id="@+id/duration_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/durasi_sewa_gedung"
                    style="@style/TextH6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_type"/>

                <TextView
                    android:id="@+id/duration_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_hari"
                    style="@style/TextH6"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/duration_type_title"
                    app:layout_constraintTop_toTopOf="@id/duration_type_title"
                    app:layout_constraintBottom_toBottomOf="@id/duration_type_title"/>


                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/onGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/duration_text"/>

                <TextView
                    android:id="@+id/price_per_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga per hari"
                    style="@style/TextH6"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider3"/>

                <TextView
                    android:id="@+id/price_per_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 80.000"
                    style="@style/TextBoldH5"
                    android:textColor="@color/orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/price_per_day_title"
                    app:layout_constraintBottom_toBottomOf="@id/price_per_day_title"/>

                <TextView
                    android:id="@+id/harga_total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_harga"
                    style="@style/TextBoldH5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_per_day_title"/>

                <TextView
                    android:id="@+id/price_range"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    style="@style/TextBoldH45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_range"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/harga_total_title"
                    app:layout_constraintBottom_toBottomOf="@id/harga_total_title"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkout_button"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="2dp"
            android:text="@string/pesan_gedung"
            android:textAllCaps="false"
            android:layout_height="55dp"
            style="@style/TextBoldH5"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_rincian_harga"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>