<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.detail.DetailMessActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_photo_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="start|top"
                android:layout_margin="16dp"
                android:clickable="true"
                android:contentDescription="@string/icon"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/arrow_back"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/general_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lodging_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mess_kota"
                    style="@style/TextBoldH4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@color/black"
                    android:src="@drawable/location"
                    app:layout_constraintTop_toBottomOf="@id/lodging_name_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medan, Sumatera Utara"
                    style="@style/TextBoldH6"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/location_icon"
                    app:layout_constraintTop_toTopOf="@id/location_icon"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/location_icon"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:backgroundTint="@color/softblue"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="360dp"
                    app:layout_constraintBottom_toTopOf="@id/text_peta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/mess_menu"
                            android:src="@drawable/maps"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/babyblue" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/text_peta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Peta"
                    android:textAlignment="center"
                    android:textColor="@color/babyblue"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="@id/maps"
                    app:layout_constraintStart_toStartOf="@id/maps"
                    app:layout_constraintTop_toBottomOf="@id/maps" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:strokeColor="@color/babyblue"
                    android:backgroundTint="@color/softblue"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="24dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/location_icon"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="2dp">

                        <ImageView
                            android:id="@+id/star"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star"
                            app:tint="@color/yellow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/text_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkBlue"
                            android:text="@string/rating"
                            app:layout_constraintBottom_toBottomOf="@id/star"
                            app:layout_constraintStart_toEndOf="@id/star"
                            app:layout_constraintTop_toTopOf="@id/star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/text_review_count"
                            app:layout_constraintBottom_toBottomOf="@id/text_review_count"
                            app:layout_constraintStart_toEndOf="@id/text_review_count"
                            android:text="@string/ulasan_count"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/text_facilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasilitas: "
                    android:textColor="@color/facility"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    android:layout_marginTop="16dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/facilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/text_facilities"
                    app:layout_constraintStart_toEndOf="@id/text_facilities"
                    app:layout_constraintTop_toTopOf="@id/text_facilities"
                    tools:listitem="@layout/item_facility" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/onGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/review"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/general_info_card"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/black">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/about_text_title"
                    style="@style/TextBoldH5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tentang_gedung"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/about_desc"
                    style="@style/TextH6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:text="@string/lorem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_text_title" />

                <TextView
                    style="@style/TextBoldH6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selengkapnya"
                    android:textColor="@color/babyblue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_about"
            android:backgroundTint="@color/softblue"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/babyblue">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/rv_photo"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_room_type_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_photo"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/black">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/room_type"
                            style="@style/TextBoldH5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room_type"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_ulasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_room_type_name"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="14dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/black">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/ulasan_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ulasan_dari_tamu"
                            style="@style/TextBoldH5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            style="@style/TextBoldH6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat semua"
                            android:textColor="@color/babyblue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star"
                            app:tint="@color/yellow"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ulasan_text_title"/>

                        <TextView
                            android:id="@+id/text_review_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/TextBoldH5"
                            android:textColor="@color/babyblue"
                            android:text="@string/rating"
                            app:layout_constraintBottom_toBottomOf="@id/star2"
                            app:layout_constraintStart_toEndOf="@id/star2"
                            app:layout_constraintTop_toTopOf="@id/star2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@id/text_review_count2"
                            app:layout_constraintBottom_toBottomOf="@id/text_review_count2"
                            app:layout_constraintStart_toEndOf="@id/text_review_count2"
                            android:text="@string/ulasan_count"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_select_renter_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_ulasan"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="14dp"
                    android:background="?attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1.5dp"
                    app:strokeColor="@color/black">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/renter_selection_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silahkan Pilih Kategori Penyewa"
                            style="@style/TextBoldH5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/renter_option_1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1.5dp"
                            app:strokeColor="@color/babyblue"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/renter_selection_title"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true">

                            <CheckBox
                                android:id="@+id/check_option_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option 1"
                                android:paddingHorizontal="10dp"
                                android:clickable="false" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/renter_option_2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/renter_option_1"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1.5dp"
                            app:strokeColor="@color/onGray"
                            android:clickable="true"
                            android:focusable="true">

                            <CheckBox
                                android:id="@+id/check_option_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option 2"
                                android:paddingHorizontal="10dp"
                                android:clickable="false" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/renter_option_3"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/renter_option_2"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1.5dp"
                            android:paddingVertical="10dp"
                            app:strokeColor="@color/onGray"
                            android:clickable="true"
                            android:focusable="true">

                            <CheckBox
                                android:id="@+id/check_option_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option 3"
                                android:paddingHorizontal="10dp"
                                android:clickable="false" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/renter_option_4"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/renter_option_3"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="1.5dp"
                            app:strokeColor="@color/onGray"
                            android:clickable="true"
                            android:focusable="true">

                            <CheckBox
                                android:id="@+id/check_option_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Option 4"
                                android:paddingHorizontal="10dp"
                                android:clickable="false" />

                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/onGray"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/renter_option_4"/>

                        <TextView
                            android:id="@+id/room_info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rent_info"
                            style="@style/TextBoldH5"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider"/>

                        <ImageView
                            android:id="@+id/slot_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/room_info_title"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/group"/>

                        <TextView
                            android:id="@+id/slot_tamu_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slot_tamu"
                            app:layout_constraintTop_toTopOf="@id/slot_icon"
                            app:layout_constraintStart_toEndOf="@id/slot_icon"
                            app:layout_constraintBottom_toBottomOf="@id/slot_icon"
                            style="@style/TextH6"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/total_slot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="@id/slot_tamu_title"
                            app:layout_constraintTop_toBottomOf="@id/slot_tamu_title"
                            android:text="@string/total_slot_title"
                            style="@style/TextH7"/>

                        <TextView
                            android:id="@+id/total_slot_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/total_slot"
                            app:layout_constraintTop_toTopOf="@id/total_slot"
                            app:layout_constraintBottom_toBottomOf="@+id/total_slot"
                            android:layout_marginStart="5dp"
                            android:text="@string/total_slot_count"
                            style="@style/TextH7"/>

                        <TextView
                            android:id="@+id/available_slot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="@id/total_slot"
                            app:layout_constraintTop_toBottomOf="@id/total_slot"
                            android:text="@string/available_slot_text"
                            style="@style/TextH7"/>

                        <TextView
                            android:id="@+id/total_available_slot_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/available_slot"
                            app:layout_constraintTop_toTopOf="@id/available_slot"
                            app:layout_constraintBottom_toBottomOf="@+id/available_slot"
                            android:layout_marginStart="5dp"
                            android:text="@string/available_slot_count"
                            style="@style/TextH7"/>

                        <ImageView
                            android:id="@+id/warning_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/available_slot"
                            android:layout_marginTop="10dp"
                            app:tint="@color/orange"
                            android:src="@drawable/baseline_warning_amber_24"/>

                        <TextView
                            android:id="@+id/warning_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mohon_diperhatikan"
                            app:layout_constraintTop_toTopOf="@id/warning_icon"
                            app:layout_constraintStart_toEndOf="@id/warning_icon"
                            app:layout_constraintBottom_toBottomOf="@id/warning_icon"
                            style="@style/TextH6"
                            android:textColor="@color/orange"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/reschedule_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/orange"
                            app:layout_constraintStart_toStartOf="@id/warning_icon"
                            app:layout_constraintTop_toBottomOf="@id/warning_text"
                            app:layout_constraintEnd_toEndOf="parent"
