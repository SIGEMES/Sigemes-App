<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/softblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.search.RoomPersonActivity">

    <ImageView
        android:id="@+id/room_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/kamar"
        app:tint="@color/darkBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room"
        app:layout_constraintTop_toTopOf="@id/room_icon"
        app:layout_constraintBottom_toBottomOf="@id/room_icon"
        app:layout_constraintStart_toEndOf="@id/room_icon"
        android:layout_marginStart="16dp"
        style="@style/TextBoldH5"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/bluable"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/add_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/babyblue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/room_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        app:layout_constraintTop_toTopOf="@id/add_button"
        app:layout_constraintBottom_toBottomOf="@id/add_button"
        app:layout_constraintEnd_toStartOf="@id/add_button"
        android:layout_marginEnd="16dp"
        style="@style/TextBoldH6"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/remove_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/bluable"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/room_count"
        app:layout_constraintEnd_toStartOf="@id/room_count"
        app:layout_constraintTop_toTopOf="@id/room_count"
        tools:ignore="TouchTargetSizeCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/remove_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/minus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/babyblue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/onGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_icon"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/group_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/outline_group"
        app:tint="@color/darkBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guest"
        app:layout_constraintTop_toTopOf="@id/group_icon"
        app:layout_constraintBottom_toBottomOf="@id/group_icon"
        app:layout_constraintStart_toEndOf="@id/group_icon"
        android:layout_marginStart="16dp"
        style="@style/TextBoldH5"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_button2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/bluable"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        tools:ignore="TouchTargetSizeCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/add_icon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/babyblue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/guest_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        app:layout_constraintTop_toTopOf="@id/add_button2"
        app:layout_constraintBottom_toBottomOf="@id/add_button2"
        app:layout_constraintEnd_toStartOf="@id/add_button2"
        android:layout_marginEnd="16dp"
        style="@style/TextBoldH6"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/remove_button2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/bluable"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/guest_count"
        app:layout_constraintEnd_toStartOf="@id/guest_count"
        app:layout_constraintTop_toTopOf="@id/guest_count"
        tools:ignore="TouchTargetSizeCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/remove_icon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/minus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/babyblue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/onGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_icon"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/save"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        android:backgroundTint="@color/softyellow"
        app:strokeColor="@color/yellow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/info_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/info"
                app:tint="@color/yellow"/>

            <TextView
                android:id="@+id/info_pemesanan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/info_icon"
                app:layout_constraintBottom_toBottomOf="@id/info_icon"
                app:layout_constraintStart_toEndOf="@id/info_icon"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:text="@string/info_pemesanan_title"
                android:textColor="@color/yellow"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/info_pemesanan_kamar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_pemesanan_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/info_pemesanan_kamar_title"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/info_pemesanan_kamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_pemesanan_kamar_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:text="@string/info_pemesanan_kamar"
                android:textColor="@color/yellow"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/info_pemesanan_slot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_pemesanan_kamar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:text="@string/info_pemesanan_slot_title"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/info_pemesanan_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_pemesanan_slot_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:text="@string/info_pemesanan_slot"
                android:textColor="@color/yellow"
                android:textSize="14sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>