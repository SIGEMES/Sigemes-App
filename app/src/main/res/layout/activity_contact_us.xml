<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".presentation.account.ContactUsActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/hello_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextH5"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/how_can_we_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bagaimana kami dapat membantumu?"
        app:layout_constraintTop_toBottomOf="@id/hello_username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        style="@style/TextBoldH4"
        android:textColor="@color/white"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_can_we_help"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/contact_us_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungi kami melalui kontak di bawah ini"
                style="@style/TextBoldH5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/contact_person_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_us_title"
                android:text="Contact Person Mess Pemko"
                style="@style/TextH6"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/phone_icon_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/contact_person_mess"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/phone"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_whatsapp_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_icon_1"
                android:text="Chat Via WhatsApp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginTop="5dp"
                style="@style/TextBoldH6"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/phone_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone_mess"
                app:layout_constraintStart_toEndOf="@id/phone_icon_1"
                app:layout_constraintTop_toTopOf="@id/phone_icon_1"
                app:layout_constraintBottom_toBottomOf="@id/phone_icon_1"
                android:layout_marginStart="5dp"
                style="@style/TextH6"/>

            <TextView
                android:id="@+id/contact_person_gedung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_whatsapp_mess"
                android:text="Contact Person Gedung Adam Malik"
                style="@style/TextH6"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:id="@+id/phone_icon_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/contact_person_gedung"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/phone"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/phone_gedung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone_gedung"
                app:layout_constraintStart_toEndOf="@id/phone_icon_2"
                app:layout_constraintTop_toTopOf="@id/phone_icon_2"
                app:layout_constraintBottom_toBottomOf="@id/phone_icon_2"
                android:layout_marginStart="5dp"
                style="@style/TextH6"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_whatsapp_gedung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_icon_2"
                android:text="Chat Via WhatsApp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginTop="5dp"
                style="@style/TextBoldH6"
                android:textColor="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>