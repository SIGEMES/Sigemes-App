    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_rincian_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="20dp"
        app:strokeWidth="1.5dp"
        app:strokeColor="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/rincian_harga_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rincian_title"
                style="@style/TextBoldH5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/rincian_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rincian"
                style="@style/TextH6"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rincian_harga_title"/>

            <TextView
                android:id="@+id/renter_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kategori_penyewa"
                style="@style/TextH6"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rincian_pesanan"/>

            <TextView
                android:id="@+id/renter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umum"
                style="@style/TextH6"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/renter_type_title"
                app:layout_constraintTop_toTopOf="@id/renter_type_title"
                app:layout_constraintBottom_toBottomOf="@id/renter_type_title"/>

            <TextView
                android:id="@+id/duration_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/durasi_sewa_kamar"
                style="@style/TextH6"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/renter_type"/>

            <TextView
                android:id="@+id/duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_malam"
                style="@style/TextH6"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/duration_type_title"
                app:layout_constraintTop_toTopOf="@id/duration_type_title"
                app:layout_constraintBottom_toBottomOf="@id/duration_type_title"/>


            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/onGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/duration_text"/>


            <TextView
                android:id="@+id/harga_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_harga"
                style="@style/TextBoldH5"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider3"/>


            <TextView
                android:id="@+id/price_range"
                android:textColor="@color/orange"
                android:textStyle="bold"
                style="@style/TextBoldH45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_range"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cart_button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="2dp"
                android:text="@string/tambah_ke_keranjang"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="24dp"
                app:layout_constraintEnd_toStartOf="@id/checkout_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/harga_total_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkout_button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:text="@string/checkout_kamar_ini"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:paddingHorizontal="2dp"
                app:layout_constraintStart_toEndOf="@id/cart_button"
                app:layout_constraintTop_toBottomOf="@id/harga_total_title"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>